      Nat.cast_one, Nat.cast_pos, Finset.card_pos, Nat.nonempty_divisors, ne_eq, Nat.add_eq_zero,
      one_ne_zero, and_false, not_false_eq_true, mul_le_mul_left]
    norm_cast
  apply le_trans hr
  simp
  norm_cast
