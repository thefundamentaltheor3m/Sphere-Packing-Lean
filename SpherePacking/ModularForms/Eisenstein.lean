    have := summable_nat_add_iff 1
        (f := fun a : ‚Ñï ‚Ü¶ (((a) : ‚Ñù) ^ k) * ‚Äñcexp (2 * ‚ÜëœÄ * Complex.I * ‚Üëz) ^ (a)‚Äñ)
