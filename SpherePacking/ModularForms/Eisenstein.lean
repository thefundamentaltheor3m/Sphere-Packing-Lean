    have h2 : ‚àë x ‚àà (b + 1).divisors, (x : ‚Ñù) ^ (k - 1) ‚â§
      ‚àë x ‚àà (b + 1).divisors, (b + 1) ^ (k - 1) := by
      norm_cast
      apply Finset.sum_le_sum
      intro i hi
      simp at *
      refine Nat.pow_le_pow_left ?_ (k - 1)
